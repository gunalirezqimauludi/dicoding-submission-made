<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <Preference
        android:icon="@drawable/ic_setting_language"
        app:key="change_language"
        app:title="@string/change_language_title"
        app:summary="@string/change_language_summary" />

    <PreferenceCategory
        app:iconSpaceReserved="false"
        app:title="@string/notification_header">

        <SwitchPreference
            app:icon="@drawable/ic_setting_release_reminder"
            app:key="release_reminder"
            app:title="@string/release_reminder_title"
            app:summary="@string/release_reminder_summary"/>

        <SwitchPreference
            app:icon="@drawable/ic_setting_daily_reminder"
            app:key="daily_reminder"
            app:title="@string/daily_reminder_title"
            app:summary="@string/daily_reminder_summary"
            app:allowDividerBelow="true"
            app:allowDividerAbove="true"/>

    </PreferenceCategory>

</PreferenceScreen>
