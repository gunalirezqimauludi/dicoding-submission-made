<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <ImageView
        android:id="@+id/tv_show_poster"
        android:layout_width="100dp"
        android:layout_height="150dp"
        android:background="@drawable/img_poster_corners"
        android:contentDescription="@string/detail_image"
        android:scaleType="fitXY" />

    <TextView
        android:id="@+id/tv_show_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="9dp"
        android:layout_toEndOf="@+id/tv_show_poster"
        android:fontFamily="@font/open_sans_semibold"
        android:text="@string/detail_title"
        android:textColor="@color/colorPrimary"
        android:textSize="12sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_show_first_air_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_show_name"
        android:layout_marginStart="15dp"
        android:layout_marginTop="4dp"
        android:layout_toEndOf="@+id/tv_show_poster"
        android:fontFamily="@font/open_sans_semibold"
        android:text="@string/detail_release_date"
        android:textSize="10sp"
        tools:ignore="SmallSp" />

    <TextView
        android:id="@+id/tv_show_vote_average"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_show_first_air_date"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_toEndOf="@+id/tv_show_ratingbar_vote_average"
        android:fontFamily="@font/open_sans_semibold"
        android:text="@string/detail_user_score"
        android:textColor="@color/colorPrimary"
        android:textSize="12sp"
        tools:ignore="MissingConstraints" />

    <RatingBar
        android:id="@+id/tv_show_ratingbar_vote_average"
        style="@android:style/Widget.Material.RatingBar.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_show_first_air_date"
        android:layout_marginStart="15dp"
        android:layout_marginTop="8dp"
        android:layout_toEndOf="@+id/tv_show_poster"
        android:isIndicator="true"
        android:numStars="5"
        android:stepSize="0.5"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/tv_show_overview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_show_ratingbar_vote_average"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@id/tv_show_poster"
        android:ellipsize="end"
        android:maxLines="4"
        android:text="@string/detail_overview"
        android:textSize="10sp"
        tools:ignore="SmallSp" />

</RelativeLayout>
